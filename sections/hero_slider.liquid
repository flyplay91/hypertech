<div class="hero-slider">
  {% for block in section.blocks %}
    <div class="hero-slider__item">
      {% if block.settings.link != blank %}
        <a class="hero-slider__link" href="{{ block.settings.link }}">
      {% endif %}
      {% if block.settings.image != blank %}
        <img class="lazyload js"
             src="{{ block.settings.image | img_url: '10x' }}"
             data-src="{{ block.settings.image | img_url: 'master' }}">
      {% endif %}
      {% if block.settings.link != blank %}
        </a>
      {% endif %}
    </div>
  {% endfor %}
</div>


<div class="hero-slider__nav-wrapper"></div>

{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}


{% capture iconLeft %}{% include 'icon-chevron-left' %}{% endcapture %}
{% capture iconRight %}{% include 'icon-chevron-right' %}{% endcapture %}

<script type="text/javascript">
const iconLeft = '{{ iconLeft }}';
const iconRight = '{{ iconRight }}';
</script>


