<div class="card headlines headline_featprods">
    <p class="headlines__title">Featured Products</p>
</div>

<div class="home_featprodscards">
{% assign featured_blocks = section.blocks | where: 'type', 'featured' %}
  {% if featured_blocks.size > 0 %}
    
    <div class="card-container">
    {% for block in featured_blocks %}
      
      <div class="card featured"> 

      <span class="title">{% if block.settings.link != blank %}<a class="card__link" href="{{ block.settings.link }}">{{block.settings.featprod_title}}</a>{% endif %}</span>

        {% if block.settings.link != blank %}
          <a class="card__link" href="{{ block.settings.link }}">
        {% endif %}

        <img class="lazyload js"
            src="{{ block.settings.image | img_url: '10x' }}"
            data-src="{{ block.settings.image | img_url: 'master' }}">
       
        <noscript>
          <img src="{{ block.settings.image | img_url }}"
              srcset="{{ block.settings.image | img_url }} 1x, {{ block.settings.image | img_url: scale: 2 }} 2x">
        </noscript>
      
       {% if block.settings.link != blank %}</a>{% endif %}
      </div>
    {% endfor %}
    </div>
  {% endif %}
</div>


<div class="card headlines headline_featprods finddealer">
    <p class="headlines__title">Find A Dealer</p>
</div>

