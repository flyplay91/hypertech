  </p>
</div>


{% assign featured_bottom_blocks = section.blocks | where: 'type', 'featured_bottom' %}
{% if featured_bottom_blocks.size > 0 %}
  <div class="card-container homebanners">
  {% for block in featured_bottom_blocks %}
    <div class="card featured">
      {% if block.settings.link != blank %}<a class="card__link" href="{{ block.settings.link }}">{% endif %}
      <img class="lazyload js"
           src="{{ block.settings.image | img_url: '10x' }}"
           data-src="{{ block.settings.image | img_url: 'master' }}">
      <noscript>
        <img src="{{ block.settings.image | img_url }}"
             srcset="{{ block.settings.image | img_url }} 1x, {{ block.settings.image | img_url: scale: 2 }} 2x">
      </noscript>
    {% if block.settings.link != blank %}</a>{% endif %}
    </div>
  {% endfor %}
  </div>
{% endif %}

<div class="istagram-block">

  <div class="card headlines">
    <p class="headlines__title">INSTAGRAM</p>
  </div>

  <div class="instagram-feed">
    <div id="insta-feed"></div>
  </div>

</div>


{% schema %}
{
  "name": "Homepage Section",
  "class": "index-section main-section container",
  "max_blocks": 30,
  "blocks": [
    {
      "type": "featured",
      "name": "Featured Images",
      "settings": [
        {
          "type": "text",
          "id": "featprod_title",
          "label": "Title"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        }
      ]
    },
    
    {
      "type": "featured_bottom",
      "name": "Featured Bottom Images",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        }
      ]
    }
  ],
  
  "presets": [
    {
      "name": "Homepage Section",
      "blocks": [
        {
          "type": "featured"
        },
        {
          "type": "featured_bottom"
        }
      ]
    }
  ]
}
{% endschema %}
