<div class="container">
	{% if section.settings.banner_image != blank %}
    <img class="lazyload js"
         src="{{ section.settings.banner_image | img_url: '10x' }}"
         data-src="{{ section.settings.banner_image | img_url: 'master' }}">
    <noscript>
      <img src="{{ section.settings.banner_image | img_url }}"
           srcset="{{ section.settings.banner_image | img_url }} 1x, {{ section.settings.banner_image | img_url: scale: 2 }} 2x">
    </noscript>
  {% endif %}
</div>


{% schema %}
{
  "name": "Products Page Banner",
  "class": "page-products-section page-products-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    }
	]
}
{% endschema %}
